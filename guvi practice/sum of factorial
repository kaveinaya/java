import java.util.Scanner;
public class Factorialsum {
	public static void main(String[] args) {
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
		int sum=0;
		for(int i=1;i<=n;i++)
		{
			int factorial=1;
			for(int j=1;j<=i;j++)
			{
				factorial=factorial*j;
			}
			sum=sum+factorial;
		}
System.out.println(sum);
	}
}
